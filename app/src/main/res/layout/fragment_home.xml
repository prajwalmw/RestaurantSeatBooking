<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/relative">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">


   <ImageView
       android:id="@+id/image_resto"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="5"
       android:background="#FFFFFF"
       android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="Restaurant is a very great and awesome place for visitors to eat food. The Armenian restaurants offer a wide variety of dishes, delicious food, sweets, and bakings. The most famous Armenian dishes are barbeque, dolma, fish, khash, harissa, aveluk, and many more. National Armenian restaurants try to bring back the right Armenian breakfast and the tradition of having breakfast. "
        android:layout_below="@+id/image_resto"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:padding="10sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/button_book"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        style="@style/Button_custom_theme"
        android:layout_alignParentBottom="true"
        android:text="Book"
        android:layout_alignBottom="@+id/text_description"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20sp"
        android:layout_centerInParent="true"
        />

    </LinearLayout>
</RelativeLayout>